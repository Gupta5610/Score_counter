<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ashishgupta.com.score_counter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Team A"
                android:gravity="center_vertical|center_horizontal"
                android:layout_margin="16dp"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="0"
                android:textSize="40sp"
                android:gravity="center"
                android:id="@+id/displayscoreA" />
            <Button
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 points"

                android:id="@+id/pta3"
                android:background="#ffc85b"
                android:layout_margin="4dp"
                android:onClick="onclickA" />
            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:onClick="onclickA"
                android:id="@+id/pta2"
                android:background="#FFFFC85B"
                android:layout_margin="4dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Add point"
                android:id="@+id/pta1"
                android:background="#FFFFC85B"
                android:onClick="onclickA"
                android:layout_margin="4dp" />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_margin="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:textSize="40sp"
                android:gravity="center"
                android:id="@+id/displayscoreb" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ptb3"
                android:background="#FFFFC85B"
                android:onClick="onclickB"
                android:layout_margin="4dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:layout_gravity="center_horizontal"
                android:id="@+id/ptb2"
                android:background="#FFFFC85B"
                android:onClick="onclickB"
                android:layout_margin="4dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Add point"
                android:id="@+id/ptb1"
                android:background="#FFFFC85B"
                android:layout_margin="4dp"
                android:onClick="onclickB"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:background="#FFFFC85B"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp" />


</RelativeLayout>
